{
  "name": "envjs",
  "version": "0.1.0-alpha.3",
  "main": "dist/umd-bundle.js",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jsdoc-to-markdown": "^5.0.1",
    "lint-staged": "^9.2.3",
    "metro-memory-fs": "^0.56.0",
    "prettier": "^1.18.2",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "scripts": {
    "build": "rollup --config",
    "test": "jest"
  },
  "browserslist": [
    "last 2 versions",
    "safari 7"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "json"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  }
}
